


{{#if isLoggedIn}}
    {{> welcome}}
 {{else}}
    <div class="col-12">
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="username">User name</label>
                <input type="text" name="username" id="username" class="form-control my-2 mr-2" placeholder="User Name">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control my-2 mr-2" placeholder="Password">
            </div>
            <input class="btn btn-primary my-2" type="submit" value="Login">
        </form>

        <a class="btn btn-secondary" href="/register" role="button">Register</a>
    </div>
{{/if}}